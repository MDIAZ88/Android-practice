<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marcos.myapplication">

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="AA_DB_NAME"
            android:value="Contacts.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="10" />

        <activity android:name=".LogInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuActivity"
            android:label="@string/app_menu_name" />
        <activity
            android:name=".AddContactActivity"
            android:label="@string/app_addcontact_name" />
        <activity android:name=".ShowContactsActivity" />
        <activity
            android:name=".ShowContactsDetailsActivity"
            android:label="@string/app_contactdetails_name" />
        <activity android:name=".DeleteContactActivity"
            android:label="@string/app_deletecontact_name"/>
        <activity android:name=".NewUserActivity"
            android:label="@string/app_newuser_name"/>
        <activity android:name=".ModifyContactActivity" />
        <activity android:name=".ModifyContactsDetailsActivity"
            android:label="@string/app_modifycontact_name"></activity>
    </application>

</manifest>
